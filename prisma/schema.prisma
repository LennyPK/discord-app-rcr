// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id         String   @id @unique
  username   String
  guildName  String
  globalName String
  wordles    Wordle[]

  @@index([username])
  @@index([guildName])
  @@index([globalName])
}

model Wordle {
  id        Int      @id @default(autoincrement())
  date      DateTime
  score     Int? // 1-6 if solved, NULL if failed
  solved    Boolean // TRUE if solved, FALSE if failed
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String

  @@unique([userId, date])
}
